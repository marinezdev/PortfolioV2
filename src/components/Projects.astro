---
import NextJS from './icons/NextJS.astro';
import TailwindCSS from './icons/TailwindCSS.astro';

const TAGS = {
    'NEXT': {
        name: 'Next.js',
        class: 'bg-black text-white',
        icon: NextJS,
    },
    'TAILWINDCSS': {
        name: 'Tailwind CSS',
        class: 'bg-[#003159] text-white',
        icon: TailwindCSS,
    }
};

const PROJECTS = [
    {
        title: 'Abogados Landing Page',
        description: 'Landing page para el despacho de abogados Zavala. Aqui se muestran los servicios prestados por el despacho, los beneficios de ser aliados al despacho e infomracion relevante a las especializaciones con las que cuentan sus asociados.',
        link: 'https://svgl.vercel.app',
        github: 'https://github.com/marinezdev/CRMMedic',
        image: './projects/abogados1.webp',
        tags: [TAGS.NEXT, TAGS.TAILWINDCSS],
    }
]
---

{
    PROJECTS.map(( { title, description, tags, image } ) => (
        <article>
            <h3 class="text-2xl font-semibold text-yellow-200 mb-2 ">{title}</h3>
            <p class="text-lg mb-4 text-pretty">{description}</p>
            <ul class="flex gap-x-2 flex-row mb-2">
                {tags.map(tag => (
                    <li class={`flex gap-x-4 rounded-full text-sm ${tag.class} py-1 px-2`}>
                        <tag.icon class="size-4" />
                        {tag.name}
                    </li>
                ))}
            </ul>
            <img class="rounded shadow-2xl shadow-white/20" src={image} alt={`Captura del proyecto ${title}`} />
        </article>
    ))
}